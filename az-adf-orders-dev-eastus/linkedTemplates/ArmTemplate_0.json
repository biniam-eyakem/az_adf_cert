		"az_ls_dl_orders_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'az_ls_dl_orders'"
		},
		"az_ls_st_orders_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'az_ls_st_orders'"
		},
		"az_ls_dl_orders_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azdatalakeorders.dfs.core.windows.net/"
